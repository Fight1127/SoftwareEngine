<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ysy.mindmap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".bases.GlobalApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".uis.main.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.main.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen" />
        <activity
            android:name=".uis.editor.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".uis.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.manage.UserMapManageActivity"
            android:label="@string/user_map_manage_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.manage.TeamManageActivity"
            android:label="@string/team_manage_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>